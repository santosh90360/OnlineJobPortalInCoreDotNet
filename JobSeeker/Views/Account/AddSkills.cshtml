@model JobSeeker.Models.Dto.SkillDto

@{
    ViewData["Title"] = "ProfileEdit";
    Layout = "~/Views/Shared/_LayoutJobSeeker.cshtml";
    int indexCount = 0;
}

<h3>Basic detail</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        @if (@ViewBag.Message != null)
        {
            if (@ViewBag.Message == ResultStatus.Success)
            {
                <div class="text-success">Skill added successfully </div>
            }
            if (@ViewBag.Message == ResultStatus.Failed)
            {
                <div class="text-danger">Skill did not add. Try again.</div>
            }
            if (@ViewBag.Message == ResultStatus.AlreadyExit)
            {
                <div class="text-danger">This Skill already added. Try with another skill</div>
            }
        }
        <form asp-action="AddSkills">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience" class="control-label"></label>
                <input asp-for="Experience" class="form-control" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastingWorking" class="control-label"></label>
                <input asp-for="LastingWorking" class="form-control" />
                <span asp-validation-for="LastingWorking" class="text-danger"></span>
            </div>

            <div class="form-group divpaddingregister">
                <input type="submit" value="Add Skill" class="btn btn-success" />
            </div>

        </form>
        <br />
        <hr />
        <h4>Skills details</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Version</th>
                    <th>Experience</th>
                    <th>Lasting Working</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Skills!=null && Model.Skills.Count > 0)
                {
                    foreach (var skill in Model.Skills)
                    {
                        indexCount= indexCount+1;
                        <tr>
                            <td>@indexCount</td>
                            <td>@skill.Name</td>
                            <td>@skill.Description</td>
                            <td>@skill.Version</td>
                            <td>@skill.Experience</td>
                            <td>@skill.LastingWorking</td>
                            <td></td>
                        </tr>

                    }
                }

            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
